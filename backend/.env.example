# Flask Configuration
FLASK_ENV=development
FLASK_APP=app.main
SECRET_KEY=change-this-to-a-random-secret-key

# Database Configuration
DATABASE_URL=postgresql://homelab:homelab@localhost:5432/homelab_db

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# JWT Configuration
JWT_SECRET_KEY=change-this-to-another-random-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600

# API Configuration
API_PREFIX=/api
HOST=0.0.0.0
PORT=5000

# Ansible Configuration
ANSIBLE_PLAYBOOK_DIR=automation/ansible/playbooks

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Celery / Redis Configuration
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0

# Ansible SSH Configuration
ANSIBLE_USER=ansible
ANSIBLE_HOST_KEY_CHECKING=accept-new
# ANSIBLE_SSH_KEY=/path/to/ssh/key
# ANSIBLE_PASSWORD=ansible123  # For password auth (requires sshpass installed)
