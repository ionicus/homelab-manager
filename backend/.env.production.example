# Production Environment Configuration
# Copy to .env and fill in all required values

# =============================================================================
# REQUIRED - Application will not start without these
# =============================================================================

# Flask secret key for session signing (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=

# JWT signing key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
JWT_SECRET_KEY=

# Database connection string
DATABASE_URL=postgresql://user:password@host:5432/homelab_db

# Allowed CORS origins (comma-separated, no wildcards!)
CORS_ORIGINS=https://homelab.example.com

# =============================================================================
# RECOMMENDED - Production defaults if not set
# =============================================================================

# Environment
FLASK_ENV=production

# Redis/Celery
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# JWT token expiry (seconds, default 3600 = 1 hour)
JWT_ACCESS_TOKEN_EXPIRES=3600

# =============================================================================
# OPTIONAL - Database connection pooling
# =============================================================================

# DB_POOL_SIZE=10
# DB_MAX_OVERFLOW=20
# DB_POOL_RECYCLE=3600
# DB_POOL_TIMEOUT=30

# =============================================================================
# OPTIONAL - Ansible configuration
# =============================================================================

ANSIBLE_PLAYBOOK_DIR=automation/ansible/playbooks
ANSIBLE_USER=ansible
# ANSIBLE_SSH_KEY=/path/to/ssh/key
# ANSIBLE_PASSWORD=  # Only if using password auth (requires sshpass)
ANSIBLE_HOST_KEY_CHECKING=accept-new

# =============================================================================
# OPTIONAL - API configuration
# =============================================================================

# API_PREFIX=/api
# HOST=127.0.0.1
# PORT=5000
# MAX_CONTENT_LENGTH=5242880
