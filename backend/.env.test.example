# Testing Environment Configuration
# Copy to .env.test for running tests

# Environment
FLASK_ENV=testing

# Use in-memory SQLite for tests
DATABASE_URL=sqlite:///:memory:

# Test secrets (fine to use these exact values in tests)
SECRET_KEY=test-secret-key-only-for-automated-testing
JWT_SECRET_KEY=test-jwt-key-only-for-automated-testing

# Disable security features for easier testing
JWT_ACCESS_TOKEN_EXPIRES=86400

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Minimal logging
LOG_LEVEL=ERROR
LOG_FORMAT=text

# Celery in eager mode (synchronous)
CELERY_TASK_ALWAYS_EAGER=true
CELERY_TASK_EAGER_PROPAGATES=true
