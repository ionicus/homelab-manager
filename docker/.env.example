# Docker Compose Environment Configuration
# Copy to .env and configure for your deployment

# =============================================================================
# Production (docker-compose.prod.yml)
# =============================================================================

# Database
POSTGRES_USER=homelab
POSTGRES_PASSWORD=change-this-secure-password
POSTGRES_DB=homelab_db

# Application secrets (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=
JWT_SECRET_KEY=

# CORS - your actual domain(s)
CORS_ORIGINS=https://homelab.example.com

# Frontend ports
FRONTEND_PORT=80
FRONTEND_SSL_PORT=443

# SSL certificates path (for production nginx)
SSL_CERT_PATH=./certs

# API URL for frontend build
VITE_API_URL=/api

# Logging
LOG_LEVEL=INFO

# =============================================================================
# Development (docker-compose.dev.yml)
# =============================================================================

# Development uses hardcoded defaults, no configuration needed
# Just run: docker compose -f docker-compose.dev.yml up -d
